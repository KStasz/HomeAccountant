<ul class="navbar-nav mb-2 mb-lg-0 d-lg-inline-flex mt-2 mt-md-0 ms-md-auto">
    <AuthorizeView>
        <Authorized>
            <li class="nav-item">
                <NavLink class="nav-link">
                    Witaj, @context.User.Identity?.Name!
                </NavLink>
            </li>
            <li class="nav-item">
                <Logout />
            </li>
        </Authorized>
        <NotAuthorized>
            <li class="nav-item">
                <button type="button" class="nav-link" data-bs-toggle="modal" data-bs-target="#authenticationModal" @onclick="@SetLogin">
                    Logowanie
                </button>
            </li>
            <li class="nav-item">
                <button type="button" class="nav-link" data-bs-toggle="modal" data-bs-target="#authenticationModal" @onclick="@SetRegister">
                    Rejestracja
                </button>
            </li>
        </NotAuthorized>
    </AuthorizeView>
</ul>

<div class="modal fade" id="authenticationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        @switch (Action)
        {
            case HeaderAction.Login:
                <LoginPage />
                break;
            case HeaderAction.Register:
                <RegisterPage />
                break;
        }
    </div>
</div>