@using HomeAccountant.Pages
@inherits MvvmComponent<LoginViewModel>


<ul class="navbar-nav mb-2 mb-lg-0 d-lg-inline-flex mt-2 mt-md-0 ms-md-auto">
    <AuthorizeView>
        <Authorized>
            <li class="nav-item">
                <NavLink class="nav-link">
                    Witaj, @context.User.Identity?.Name!
                </NavLink>
            </li>
            <li class="nav-item">
                <Logout />
            </li>
        </Authorized>
        <NotAuthorized>
            <li class="nav-item">
                <button type="button" class="nav-link" data-bs-toggle="modal" data-bs-target="#authenticationModal" @onclick="ViewModel.Login">
                    Logowanie
                </button>
            </li>
            <li class="nav-item">
                <button type="button" class="nav-link" data-bs-toggle="modal" data-bs-target="#authenticationModal" @onclick="ViewModel.Register">
                    Rejestracja
                </button>
            </li>
        </NotAuthorized>
    </AuthorizeView>
</ul>

<LoginPage @ref="ViewModel.LoginDialog" AuthService="ViewModel.AuthenticationService" />

<RegisterPage @ref="ViewModel.RegisterDialog" AuthService="ViewModel.AuthenticationService" />