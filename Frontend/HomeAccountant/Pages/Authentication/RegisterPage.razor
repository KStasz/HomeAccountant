<EditForm Model="ViewModel.RegisterData" OnValidSubmit="ViewModel.Register">
    <DataAnnotationsValidator />
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Utwórz swoje konto</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="row row-cols-1 g-3">
                <div class="col">
                    <div class="col-12 col-md-9 col-lg-6">
                        <label for="emailInput">Email:</label>
                        <InputText type="email" id="emailInput" class="form-control" @bind-Value="ViewModel.RegisterData.Email" />
                        <ValidationMessage For="() => ViewModel.RegisterData.Email" />
                    </div>
                </div>
                <div class="col">
                    <div class="col-12 col-md-9 col-lg-6">
                        <label for="username">Nazwa użytkownika:</label>
                        <InputText type="text" id="username" class="form-control" @bind-Value="ViewModel.RegisterData.UserName" />
                        <ValidationMessage For="() => ViewModel.RegisterData.UserName" />
                    </div>
                </div>
                <div class="col">
                    <div class="col-12 col-md-9 col-lg-6">
                        <label for="passwordInput">Hasło:</label>
                        <InputText type="password" id="passwordInput" class="form-control" @bind-Value="ViewModel.RegisterData.Password" />
                        <ValidationMessage For="() => ViewModel.RegisterData.Password" />
                    </div>
                </div>
                <div class="col">
                    <div class="col-12 col-md-9 col-lg-6">
                        <label for="repeatedPasswordInput">Powtórz hasło:</label>
                        <InputText type="password" id="repeatedPasswordInput" class="form-control" @bind-Value="ViewModel.RegisterData.RepeatedPassword" />
                        <ValidationMessage For="() => ViewModel.RegisterData.RepeatedPassword" />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
            <button type="submit" class="btn btn-success">Zarejestruj się</button>
        </div>
    </div>
</EditForm>