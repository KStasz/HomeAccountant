<Modal @ref="_modal" Position="ModalPosition.Centered">
    <ModalContent>
        <EditForm EditContext="_editContext" OnValidSubmit="Accept">
            <DataAnnotationsValidator />
            <ModalHeader ModalTitle="Utwórz nową kategorie" />
            <ModalBody>
                <div class="mb-3">
                    <label for="categoryName" class="form-label">Nazwa</label>
                    <InputText type="text" class="form-control" id="categoryName" @bind-Value="_model!.Name" />
                    <ValidationMessage For="() => _model.Name" />
                </div>
            </ModalBody>
            <ModalFooter>
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Anuluj</button>
                <button type="submit" class="btn btn-success">Utwórz</button>
            </ModalFooter>
        </EditForm>
    </ModalContent>
</Modal>