{
  "Routes": [
    //Categories API
    {
      "UpstreamPathTemplate": "/api/Categories",
      "UpstreamHttpMethod": [ "Put", "Post" ],

      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/Categories"
    },
    {
      "UpstreamPathTemplate": "/api/Categories/{id}",
      "UpstreamHttpMethod": [ "Get", "Delete" ],

      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/Categories/{id}"
    },
    {
      "UpstreamPathTemplate": "/api/Categories/{userId}",
      "UpstreamHttpMethod": [ "Get" ],

      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/Categories/{userId}"
    },
    //IdentityPlatform API
    {
      "UpstreamPathTemplate": "/api/Authentication/Register",
      "UpstreamHttpMethod": [ "Post" ],

      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity_platform",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/Authentication/Register"
    },
    {
      "UpstreamPathTemplate": "/api/Authentication/Login",
      "UpstreamHttpMethod": [ "Post" ],

      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity_platform",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/Authentication/Login"
    },
    {
      "UpstreamPathTemplate": "/api/Authentication/RefreshToken",
      "UpstreamHttpMethod": [ "Post" ],

      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity_platform",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/Authentication/RefreshToken"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5062"
  }
}